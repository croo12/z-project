{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "z-project",
  "version": "0.1.0",
  "identifier": "com.zproject.app",
  "build": {
    "beforeDevCommand": "npm run dev --prefix src",
    "beforeBuildCommand": "npm run build --prefix src",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../src/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "z-project",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
